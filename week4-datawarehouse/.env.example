# Week 4 - Data Warehouse Environment Variables
# Kopyalayıp .env olarak kullanın

# ============================================
# OLTP Database (PostgreSQL)
# ============================================
OLTP_HOST=postgres-oltp
OLTP_PORT=5432
OLTP_USER=oltp_user
OLTP_PASSWORD=oltp_pass
OLTP_DATABASE=ecommerce_oltp

# ============================================
# OLAP Database (PostgreSQL)
# ============================================
OLAP_HOST=postgres-olap
OLAP_PORT=5432
OLAP_USER=olap_user
OLAP_PASSWORD=olap_pass
OLAP_DATABASE=ecommerce_olap

# ============================================
# MinIO / Data Lake
# ============================================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minio_admin
MINIO_SECRET_KEY=minio_password123
MINIO_BUCKET_RAW=raw-data
MINIO_BUCKET_PROCESSED=processed-data
MINIO_BUCKET_BACKUPS=backups

# ============================================
# Spark
# ============================================
SPARK_MASTER=spark://spark-master:7077

# ============================================
# Superset
# ============================================
SUPERSET_SECRET_KEY=your-secret-key-here-change-in-production
SUPERSET_ADMIN_USERNAME=admin
SUPERSET_ADMIN_PASSWORD=admin123

# ============================================
# Airflow
# ============================================
AIRFLOW_USERNAME=airflow
AIRFLOW_PASSWORD=airflow123

# ============================================
# ETL Configuration
# ============================================
ETL_BATCH_SIZE=1000
ETL_LOG_LEVEL=INFO
ETL_RETRY_COUNT=3